{
  "name": "tendercare-website",
  "version": "1.0.0",
  "description": "Tendercare Healthcare Technology Website",
  "scripts": {
    "minify-css": "cleancss -o assets/css/main.min.css assets/css/main.css",
    "minify-js": "uglifyjs assets/js/main.js -o assets/js/main.min.js -c -m",
    "minify": "npm run minify-css && npm run minify-js",
    "build": "npm run minify"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.1",
    "uglify-js": "^3.17.4"
  }
}
